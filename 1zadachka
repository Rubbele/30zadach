#include <iostream>
#include <stdlib.h>
#include <time.h>

using namespace std;

int main()
{
    srand(time(NULL));
    int n;
    int count=0;
    cout <<"Input n:";
    cin >> n;
    int mas[n];
    for (int i=0; i<n; i++){
        mas[i]=rand()%14+1;
        cout << mas[i] << " ";
    }
    for (int i=0; i<n; i++)
        {
    if (mas[i]%2==0)
    {
        count++;
        }
    }
    cout<<endl<<"Count:"<<count;
    return 0;
}
